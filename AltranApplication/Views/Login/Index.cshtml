
@model  AltranApplication.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authentification Page</title>
    <link href="~/Content/login.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <h1 style="color:burlywood">TODO LIST APPLICATION</h1>
    <div class="Login">
        @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline">Authentification</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.UserName)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.UserName)
                    </td>
                </tr>
                <tr>
                </tr>
               
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Password)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Password)
                    </td>
                </tr>
            
                <tr>
                    <td></td>
                  
                    <td><label style="color:red">@ViewBag.Message</label></td>
                </tr>
                <tr>
                    <td> </td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />

                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>

